
.nav_wrap {
}
.nav {
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_list {
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
  /* background: #000; */
}
.nav_list.active {
  border-bottom: 1px solid #fb7299;
  color: #fb7299;
}

/* swiper */
.slides {
  margin-top: 10rpx;
}
.slides swiper {
  height: 220rpx;
}
.slides block,
.slides image.slide-image {
  width: 100%;
  height: 100%;
}
.slides image.slide-image {
  border-radius: 10rpx;
  overflow: hidden;
}

/* video list */
.video_wrap {
  margin-top: 10rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.video_item {
  width: 49%;
  margin-bottom: 2%;
}
.video_wrap .video_item .video_img {
  width: 100%;
  height: 200rpx;
  position: relative;
}
.video_wrap .video_item image {
  width: 100%;
  height: 100%;
  display: block;
}
.video_item image {
  border-radius: 10rpx;
  overflow: hidden;
}
.video_wrap .video_item .video_img .number_wrap {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 30rpx;
  z-index: 4;
  display: flex;
  justify-content: space-evenly;
}
.video_wrap .video_item .video_img .number_wrap .playCount,
.video_wrap .video_item .video_img .number_wrap .commentCount {
  color: #fff;
  font-size: 22rpx;
  line-height: 30rpx;
  text-align: center;
}
.video_wrap .video_item .main_title {
  margin-top: 6rpx;
  font-size: 24rpx;
  line-height: 30rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  height: 60rpx;
}
